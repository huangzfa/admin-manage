<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.duobei.core.operation.product.dao.ProductDao" >

    <resultMap id="BaseResultMap" type="com.duobei.core.operation.product.domain.ProductBusiness" extends="com.duobei.core.operation.product.dao.mapper.ProductBusinessMapper.BaseResultMap">
    </resultMap>

    <select id="getPageList" resultType="com.duobei.core.operation.product.domain.Product" parameterType="com.duobei.core.operation.product.domain.criteria.ProductCriteria">
        SELECT   * FROM yy_product
        where 1=1
        <if test="productName != null and productName != '' ">
            and product_name like "%"#{name,jdbcType=VARCHAR}"%"
        </if>
        <if test="merchantId != null and merchantId != '' ">
            and merchant_id = #{merchantId,jdbcType=INTEGER}
        </if>
        order by id desc
        <if test="pagesize != 0">
            LIMIT #{offset}, #{pagesize}
        </if>
    </select>

    <select id="countByCriteria" parameterType="com.duobei.core.operation.product.domain.criteria.ProductCriteria" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM yy_product where 1=1
        <if test="productName != null and productName != '' ">
            and product_name like "%"#{name,jdbcType=VARCHAR}"%"
        </if>
        <if test="merchantId != null and merchantId != '' ">
            and merchant_id = #{merchantId,jdbcType=INTEGER}
        </if>
        order by id desc
    </select>

    <select id="getById" parameterType="java.lang.Integer" resultType="com.duobei.core.operation.product.domain.Product">
        SELECT * FROM yy_product  where state = 1 and  id = #{id,jdbcType=INTEGER}
    </select>

    <select id="getByCode" parameterType="java.lang.String" resultType="com.duobei.core.operation.product.domain.Product">
        SELECT * FROM yy_product  where state = 1 and  product_code = #{code,jdbcType=VARCHAR}
    </select>

    <select id="getAll" resultType="com.duobei.core.operation.product.domain.Product">
        SELECT * FROM yy_product  where state = 1 order by id desc;
    </select>
</mapper>